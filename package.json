{
  "name": "metaverse",
  "version": "0.1.0",
  "private": true,
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@truffle/hdwallet-provider": "^2.1.13",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "hardhat": "^2.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "three": "^0.137.5",
    "truffle-plugin-verify": "^0.6.5",
    "vite": "^4.4.11",
    "web-vitals": "^2.1.4",
    "web3": "^1.7.0",
    "ws": "^8.14.2",
    "@wagmi/core": "1.3.3",
    "@web3modal/ethereum": "2.7.1",
    "@web3modal/html": "2.7.1",
    "viem": "1.2.5"
  },
  "scripts": {
    "start": "node src/server.js",
    "old_start2": "node src/server2.js",
    "web": "npx vite --port 5500 --host --base /public/",
    "ganache": "npx ganache-cli --port 7545",
    "verify": "npx truffle run verify Painting --network matic --debug",
    "deploy ganache": "npx truffle migrate --reset",
    "deploy mumbai": "npx truffle migrate --reset --network matic",
    "deploy mumbai compile none (if default fail)": "npx truffle migrate --reset --network matic --compile-none",
    "oldstart": "set \"GENERATE_SOURCEMAP=false\" && react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "react-app-rewired": "^2.1.11",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0",
    "vite": "4.3.9"  
  }
}
